{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "lst-mobile",
  "version": "0.1.0",
  "identifier": "com.lst-mobile.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": false,
    "windows": [
      {
        "title": "lst-mobile",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "mobile-permissions",
          "windows": [
            "*"
          ],
          "permissions": [
            "core:default",
            "core:event:allow-listen",
            "core:event:default",
            "core:path:default",
            "core:app:default"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}

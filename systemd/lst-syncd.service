[Unit]
Description=lst Background Sync Daemon
After=network.target lst-server.service
Wants=network.target
Requires=lst-server.service

[Service]
Type=exec
User=lst
Group=lst
ExecStart=/usr/local/bin/lst-syncd --foreground --config /etc/lst/config.toml
Restart=on-failure
RestartSec=5
Environment=HOME=/var/lib/lst
WorkingDirectory=/var/lib/lst
StandardOutput=journal
StandardError=journal

# Security settings
NoNewPrivileges=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/var/lib/lst
PrivateTmp=true
ProtectKernelTunables=true
ProtectKernelModules=true
ProtectControlGroups=true

[Install]
WantedBy=multi-user.target